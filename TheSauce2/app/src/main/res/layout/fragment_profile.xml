<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.carolinagold.thesauce.ProfileFragment">


            <LinearLayout
                android:id="@+id/profile_fragment_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#e0e0e0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_fragment_profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/profile_fragment_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_fragment_linear_layout">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/profile_fragment_recycler_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>



</RelativeLayout>
